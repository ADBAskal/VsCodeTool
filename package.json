{
  "name": "dayz-mod-tool",
  "displayName": "DayZ Mod Tools",
  "description": "Automated PBO generation and mod management for DayZ via VS Code",
  "publisher": "askal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ADBAskal/VsCodeTool"
  },
  "version": "0.0.54",
  "keywords": [
    "dayz",
    "mikero",
    "pbo",
    "moding",
    "arma"
  ],
  "icon": "media/askal_icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dayz-mod-tool.buildMod",
        "title": "Build Mod PBO",
        "category": "DayZ",
        "icon": "$(tools)"
      },
      {
        "command": "dayz-mod-tool.refreshMods",
        "title": "Refresh Mod List",
        "icon": "$(refresh)"
      },
      {
        "command": "dayz-mod-tool.startServer",
        "title": "Start Server",
        "icon": "$(play)"
      },
      {
        "command": "dayz-mod-tool.stopServer",
        "title": "Stop Server",
        "icon": "$(stop)"
      },
      {
        "command": "dayz-mod-tool.restartServer",
        "title": "Restart Server",
        "icon": "$(debug-restart)"
      },
      {
        "command": "dayz-mod-tool.startClient",
        "title": "Start Client",
        "icon": "$(run)"
      },
      {
        "command": "dayz-mod-tool.killClient",
        "title": "Kill Client",
        "icon": "$(close)"
      },
      {
        "command": "dayz-mod-tool.restartClient",
        "title": "Restart Client",
        "icon": "$(debug-restart)"
      },
      {
        "command": "dayz-mod-tool.startAutoMode",
        "title": "Launch Full Environment",
        "icon": "$(rocket)"
      },
      {
        "command": "dayz-mod-tool.stopAll",
        "title": "Stop All",
        "icon": "$(debug-stop)"
      },
      {
        "command": "dayz-mod-tool.restartAll",
        "title": "Restart All",
        "icon": "$(debug-restart)"
      },
      {
        "command": "dayz-mod-tool.openSettings",
        "title": "Configuration",
        "icon": "$(settings-gear)"
      },
      {
        "command": "dayz-mod-tool.buildPending",
        "title": "Build Pending",
        "icon": "$(checklist)"
      },
      {
        "command": "dayz-mod-tool.buildAll",
        "title": "Build All",
        "icon": "$(gear)"
      },
      {
        "command": "dayz-mod-tool.selectServerConfig",
        "title": "Select Server Config",
        "icon": "$(check)"
      }
    ],
    "configuration": {
      "title": "DayZ Mod Tools",
      "properties": {
        "dayzTool.sourcePath": {
          "type": "string",
          "default": "P:/",
          "description": "Root path for mod sources (Work Drive). Must be P:/ or a mapped drive acting as the project root."
        },
        "dayzTool.outputPath": {
          "type": "string",
          "default": "",
          "description": "Output path for PboProject. If empty, defaults to PboProject's standard behavior (usually creating an @ModName folder in P:/)."
        },
        "dayzTool.serverIP": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Server IP address for the client to connect to."
        },
        "dayzTool.serverPort": {
          "type": "integer",
          "default": 2302,
          "description": "Server Port for the client to connect to."
        },
        "dayzTool.modFolderNameOverride": {
          "type": "string",
          "default": "",
          "description": "Override the Mod Folder Name (e.g. @MySuperMod). If empty, uses Workspace Name or Folder Name."
        },
        "dayzTool.keyPath": {
          "type": "string",
          "default": "",
          "description": "Absolute path to the private key (.biprivatekey) for signing."
        },
        "dayzTool.dayzServerPath": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\DayZServer",
          "description": "Path to DayZ Server directory (for logs and testing reference)."
        },
        "dayzTool.dayzClientPath": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\common\\DayZ",
          "description": "Path to DayZ Client directory."
        },
        "dayzTool.workshopPath": {
          "type": "string",
          "default": "C:\\Program Files (x86)\\Steam\\steamapps\\workshop\\content\\221100",
          "description": "Path to DayZ Workshop folder (usually .../steamapps/workshop/content/221100)."
        },
        "dayzTool.clientName": {
          "type": "string",
          "default": "Askal",
          "description": "Name to use for the DayZ Client launch parameter (-name=...)."
        },
        "dayzTool.serverConfigFile": {
          "type": "string",
          "default": "serverDZ.cfg",
          "description": "The server configuration file to use for launching the server."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dayz-mod-explorer",
          "title": "Askal Tools",
          "icon": "media/icon.svg"
        }
      ]
    },
    "views": {
      "dayz-mod-explorer": [
        {
          "id": "dayzServerControl",
          "name": "Askal Control Center",
          "icon": "media/icon.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dayz-mod-tool.refreshMods",
          "when": "view == dayzServerControl",
          "group": "navigation"
        },
        {
          "command": "dayz-mod-tool.startAutoMode",
          "when": "view == dayzServerControl",
          "group": "navigation",
          "title": "Launch Full Environment"
        },
        {
          "command": "dayz-mod-tool.restartAll",
          "when": "view == dayzServerControl",
          "group": "navigation",
          "title": "Restart All"
        },
        {
          "command": "dayz-mod-tool.stopAll",
          "when": "view == dayzServerControl",
          "group": "navigation",
          "title": "Stop All"
        },
        {
          "command": "dayz-mod-tool.openSettings",
          "when": "view == dayzServerControl",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "dayz-mod-tool.buildMod",
          "when": "view == dayzServerControl && viewItem =~ /modItemDev/",
          "group": "inline"
        },
        {
          "command": "dayz-mod-tool.refreshMods",
          "when": "view == dayzServerControl && viewItem == groupSourceAddons",
          "group": "inline"
        },
        {
          "command": "dayz-mod-tool.buildPending",
          "when": "view == dayzServerControl && viewItem == groupSourceAddons",
          "group": "inline"
        },
        {
          "command": "dayz-mod-tool.buildAll",
          "when": "view == dayzServerControl && viewItem == groupSourceAddons",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}